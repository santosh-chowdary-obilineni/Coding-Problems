// Greedy approach -- 3074
class Solution {
public:
    int minimumBoxes(vector<int>& apple, vector<int>& capacity) {
        sort(capacity.rbegin() , capacity.rend());
        int sum = 0;
        for(auto i : apple){
            sum += i;
        }
        int sum1 = 0;
        int cnt = 0;
        for(auto i : capacity){
            sum1 += i;
            cnt++;
            if(sum1 >= sum) return cnt;
        }
        return cnt;
    }
};
