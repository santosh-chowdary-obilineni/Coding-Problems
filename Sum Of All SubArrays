#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int n ;
	cin >> n;
	vector<int> vec(n);
	for(int i = 0 ;i < n; i++){
	    cin >> vec[i];
	}
	int sum = 0;
	for(int i =0; i < n; i++){
	    sum += vec[i] * ((n - i - 1) + (i * (n - i)));// each element is repeated the no of elements ahead of it + index postiton * (no of elements ahead of it + 1)
	    sum += vec[i]; // adding the current element for single subarray
	}
	cout << sum << endl;
	

}
//https://www.geeksforgeeks.org/problems/sum-of-subarrays2229/1
