//Finding the lower bound using binary search in a sorted array
//https://www.geeksforgeeks.org/problems/implement-lower-bound/1
//The lower bound of a number is defined as the smallest index in the sorted array where the element is greater than or equal to the given number.

class Solution {
  public:
    int lowerBound(vector<int>& arr, int target) {
        // code here
        int ans = arr.size();
        int low = 0;
        int high = ans - 1;
        while(low <= high){
            int mid = (low + high) / 2;
            if(arr[mid] >= target){
                ans = mid;
                high = mid - 1;
            }
            else low = mid + 1;
        }
        return ans;
    }
};
