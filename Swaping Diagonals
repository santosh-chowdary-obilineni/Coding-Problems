// GFG --> Swaping the diagonals
class Solution {
  public:
    void swapDiagonal(vector<vector<int>> &mat) {
        // code here
        int k = 0;
        int j = mat.size() - 1;
        for(int i = 0 ;i  < mat.size(); i++){
            int temp = mat[i][k];
            mat[i][k] = mat[i][j];
            mat[i][j] = temp;
            k++;
            j--;
        }
        
    }
};
//https://www.geeksforgeeks.org/problems/swap-major-and-minor-diagonals-of-a-square-matrix/1
